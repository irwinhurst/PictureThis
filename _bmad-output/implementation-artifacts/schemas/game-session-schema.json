{
  "title": "Game Session",
  "description": "Schema for a game session with unique code and metadata",
  "type": "object",
  "properties": {
    "gameId": {
      "type": "string",
      "description": "Unique UUID for the game session",
      "format": "uuid"
    },
    "code": {
      "type": "string",
      "description": "6-character alphanumeric unique game code (uppercase)",
      "pattern": "^[A-Z0-9]{6}$",
      "minLength": 6,
      "maxLength": 6
    },
    "hostId": {
      "type": "string",
      "description": "UUID of the host player (user who created the game)",
      "format": "uuid"
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 timestamp when session was created",
      "format": "date-time"
    },
    "lastActivityAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of last activity (for timeout detection)",
      "format": "date-time"
    },
    "maxRounds": {
      "type": "integer",
      "description": "Maximum number of rounds for this game",
      "minimum": 1,
      "maximum": 20,
      "default": 5
    },
    "currentRound": {
      "type": "integer",
      "description": "Current round number (0-indexed)",
      "minimum": 0
    },
    "currentPhase": {
      "type": "string",
      "enum": [
        "lobby",
        "round_intro",
        "card_selection",
        "judge_phase",
        "results",
        "completed"
      ],
      "description": "Current game phase"
    },
    "maxPlayers": {
      "type": "integer",
      "description": "Maximum number of players allowed",
      "minimum": 2,
      "maximum": 16,
      "default": 8
    },
    "status": {
      "type": "string",
      "enum": [
        "lobby",
        "in_progress",
        "completed",
        "inactive"
      ],
      "description": "Overall session status"
    },
    "players": {
      "type": "array",
      "description": "List of players in the session",
      "items": {
        "type": "object",
        "properties": {
          "playerId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          },
          "isHost": {
            "type": "boolean"
          },
          "joinedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["playerId", "name", "joinedAt"]
      }
    },
    "sentenceTemplate": {
      "type": "string",
      "description": "Fill-in-the-blank sentence template for current round"
    },
    "selectedNouns": {
      "type": "array",
      "description": "Selected noun cards for current round",
      "items": {
        "type": "string"
      }
    },
    "timeoutMinutes": {
      "type": "integer",
      "description": "Inactivity timeout in minutes",
      "default": 60
    }
  },
  "required": [
    "gameId",
    "code",
    "hostId",
    "createdAt",
    "lastActivityAt",
    "maxRounds",
    "currentRound",
    "currentPhase",
    "status"
  ]
}
